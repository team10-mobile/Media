<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#68E8DE"
                android:centerColor="#8A64EB"
                android:centerY="1.0"
                android:endColor="#8A64EB"
                android:angle="270"
                />
            <corners
                android:radius="20dp"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#FF8482"
                    android:centerColor="#7D77FF"
                    android:centerY="1.0"
                    android:endColor="#7D77FF"
                    android:angle="270"
                    />
                <corners
                    android:radius="20dp"
                    />
            </shape>
        </clip>
    </item>
</layer-list>